<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".java.SignUp.SignUpActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="175dp"
        android:layout_height="171dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-50dp"
        android:layout_marginTop="-50dp"
        app:srcCompat="@drawable/ellips" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sign_up_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="164dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Qeydiyyat"
        android:textAlignment="center"
        android:textColor="#5916E6"
        android:textSize="36sp" />



    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/sign_up_text"
        android:layout_centerHorizontal="true"
        android:background="#F0F0FF"
        android:fontFamily="@font/roboto_medium"
        android:hint="İstifadəçi adı"
        android:textAlignment="center"
        android:textColor="#6159E6"
        android:textColorHint="#6159E6" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:background="#F0F0FF"
        android:fontFamily="@font/roboto_medium"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#6159E6"
        android:textColorHint="#6159E6" />

    <androidx.appcompat.widget.AppCompatEditText
        android:inputType="textPassword"
        android:id="@+id/password"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:background="#F0F0FF"
        android:fontFamily="@font/roboto_medium"
        android:hint="Şifrə"
        android:textAlignment="center"
        android:textColor="#6159E6"
        android:textColorHint="#6159E6" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        app:switchPadding="20dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:text="Tələbə"
        android:layoutDirection="rtl"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup"
        android:layout_below="@id/switcher"
        android:layout_marginTop="30dp"
        android:background="#6159E6"
        android:text="Hesab yarat"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#F0F0FF"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="40dp"/>




</RelativeLayout>