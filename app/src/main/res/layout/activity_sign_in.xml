<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".java.Login.LoginActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="175dp"
        android:layout_height="171dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-50dp"
        android:layout_marginTop="-50dp"
        app:srcCompat="@drawable/ellips" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/undraw_book_lover_mkck" />



    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:background="#F0F0FF"
        android:fontFamily="@font/roboto_medium"
        android:hint="E-mail"
        android:textAlignment="center"
        android:textColor="#6159E6"
        android:textColorHint="#6159E6" />

    <androidx.appcompat.widget.AppCompatEditText
        android:inputType="textPassword"
        android:id="@+id/password"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:background="#F0F0FF"
        android:fontFamily="@font/roboto_medium"
        android:hint="Şifrə"
        android:textAlignment="center"
        android:textColor="#6159E6"
        android:textColorHint="#6159E6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login"
        android:layout_below="@id/password"
        android:layout_marginTop="30dp"
        android:background="#6159E6"
        android:text="Daxil ol"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#F0F0FF"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="40dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/signup"
        android:clickable="true"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#9891FF"
        android:textAlignment="center"
        android:layout_below="@id/login"
        android:text="Əgər hesabınız yoxdursa, Qeydiyyatdan keçin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>