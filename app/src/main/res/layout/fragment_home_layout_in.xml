<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="171dp"
        android:layout_height="173dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-50dp"
        android:layout_marginBottom="-50dp"
        app:srcCompat="@drawable/ellips" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="148dp"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="91dp"
        android:src="@drawable/dev"
        app:civ_border_color="#FF000000" />
<!--    <ImageView-->
<!--        android:id="@+id/profile_image"-->
<!--        android:layout_width="148dp"-->
<!--        android:layout_height="158dp"-->
<!--        android:layout_alignParentStart="true"-->
<!--        android:layout_alignParentTop="true"-->
<!--        android:layout_marginStart="32dp"-->
<!--        android:layout_marginTop="91dp"-->
<!--        android:src="@drawable/dev"/>-->

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="300dp"
        android:layout_toRightOf="@+id/profile_image"
        android:fontFamily="@font/vollkorn"
        android:text="email"
        android:textColor="#6159E6"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="300dp"
        android:layout_toRightOf="@+id/profile_image"
        android:fontFamily="@font/vollkorn"
        android:text="Username"
        android:textColor="#6159E6"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="300dp"
        android:layout_toRightOf="@+id/profile_image"
        android:fontFamily="@font/vollkorn"
        android:textStyle="italic"
        android:text="Status: Müəllim"
        android:textColor="#9891FF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/smart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vollkorn"
        android:text="AĞILLI TƏHSİL"
        android:layout_centerInParent="true"
        android:textColor="#6159E6"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uploadContent"
        android:text="Kontent yükləyin"
        android:fontFamily="@font/vollkorn"
        android:textColor="#F0F0FF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="219dp"
        android:layout_height="122dp"
        android:layout_below="@id/smart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#9891FF" />

</RelativeLayout>